# Environment Configuration Template
# Copy this to .env.local for development or configure in your deployment platform

# ===== REQUIRED: Claude API =====
ANTHROPIC_API_KEY=your_claude_api_key_here

# ===== REQUIRED: Supabase Configuration =====
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===== REQUIRED: NextAuth Configuration =====
NEXTAUTH_SECRET=your_generated_secret_key_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# ===== OPTIONAL: Production Settings =====
# Node environment (automatically set by deployment platforms)
NODE_ENV=production

# ===== OPTIONAL: Performance & Monitoring =====
# Enable detailed error logging in production (default: false)
ENABLE_DETAILED_LOGGING=false

# Enable performance monitoring (default: false)  
ENABLE_PERFORMANCE_MONITORING=false

# Cache TTL in milliseconds (default: 300000 = 5 minutes)
CACHE_TTL=300000

# Maximum cache size (default: 100)
MAX_CACHE_SIZE=100

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ===== OPTIONAL: Security Headers =====
# Content Security Policy (CSP) - customize as needed
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.anthropic.com https://*.supabase.co wss://*.supabase.co;"

# ===== DEPLOYMENT PLATFORM SPECIFIC =====
# Vercel
# VERCEL_URL (automatically provided)

# Railway
# RAILWAY_STATIC_URL (automatically provided)

# Netlify  
# NETLIFY_URL (automatically provided)

# Digital Ocean App Platform
# APP_URL (configure manually)

# Heroku
# PORT (automatically provided)

# ===== DATABASE =====
# Database connection pooling (for high-traffic applications)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===== FEATURE FLAGS =====
# Enable/disable features for production rollout
FEATURE_MESSAGE_REACTIONS=false
FEATURE_MESSAGE_SEARCH=false  
FEATURE_CONVERSATION_SHARING=false
FEATURE_DARK_MODE=true

# ===== ANALYTICS & MONITORING =====
# If using external analytics services
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=
# POSTHOG_KEY=